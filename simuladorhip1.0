<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Simulador de Crédito Hipotecario</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 20px;
        }
        .simulador {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            max-width: 500px;
            margin: auto;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }
        input, button {
            width: 100%;
            padding: 10px;
            margin-top: 10px;
            border-radius: 4px;
            border: 1px solid #ccc;
        }
        button {
            background-color: #4CAF50;
            color: white;
            border: none;
        }
        .resultados {
            margin-top: 20px;
        }
    </style>
</head>
<body>

<div class="simulador">
    <h1>Simulador de Crédito Hipotecario</h1>
    <label for="monto">Monto del préstamo ($):</label>
    <input type="number" id="monto" placeholder="Ej. 2000000">

    <label for="tasa">Tasa de interés anual (%):</label>
    <input type="number" id="tasa" placeholder="Ej. 5">

    <label for="plazo">Plazo (años):</label>
    <input type="number" id="plazo" placeholder="Ej. 20">

    <button onclick="calcular()">Calcular</button>

    <div class="resultados" id="resultados"></div>
</div>

<script>
    function calcular() {
        // Obtener valores ingresados
        let monto = parseFloat(document.getElementById('monto').value);
        let tasa = parseFloat(document.getElementById('tasa').value) / 100 / 12;
        let plazo = parseFloat(document.getElementById('plazo').value) * 12;

        // Fórmula de la mensualidad
        let mensualidad = monto * tasa / (1 - Math.pow(1 + tasa, -plazo));

        if (isNaN(mensualidad)) {
            document.getElementById('resultados').innerHTML = "Por favor, ingresa todos los valores.";
        } else {
            document.getElementById('resultados').innerHTML = `
                <p>Pago mensual: $${mensualidad.toFixed(2)}</p>
                <p>Costo total del crédito: $${(mensualidad * plazo).toFixed(2)}</p>
            `;
        }
    }
</script>

</body>
</html>
